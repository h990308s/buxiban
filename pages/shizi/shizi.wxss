/* pages/shizi/shizi.wxss */
.uploadWrap {
  float: left;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.upload_Item {
  float: left;
  width: 1000rpx;
  height: 1050rpx;
  margin: 40rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: #ccc 0 0 4px 1px;
}
.up{
  width: 670rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.upload_Item_img {
  float: left;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
}
.up text {
  display: inline-block;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  width: 160rpx;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.aaa{
  width: 100%;
  height: 1100rpx;
}
.down{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-left: 5%;
}
.down text{
  font-size: 28rpx;
  letter-spacing: 3rpx;
  margin-top: 15rpx;
}
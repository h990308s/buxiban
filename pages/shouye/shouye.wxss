/* pages/shouye/shouye.wxss */
.input{
  width: 100%;
  height: 120rpx;
  background: #3197fb;
  display: flex;
  align-items: center;
  justify-content: center;
}
.input input{
  width: 90%;
  height: 70rpx;
  background: #fff;
  border-radius: 25rpx;
  text-align: center;
  font-size: 26rpx;
}
.u-wrp-bnr {
  width: 100%;
  height: 360rpx;
  display: block;
  position: relative;
  background: #f0f0f0;
}
.u-img-slide {
  width: 100%;
  height: inherit;
}
.banner{
  width: 100%;
  height: 400rpx;
}
.banner_t{
  width: 100%;
  height: 200rpx;
  display: flex;
  margin-top: 30rpx;
  flex-wrap: wrap;
  flex-direction: row;
}
.banner_t_img{
  width: 25%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.banner_t_img image{
  width: 60%;
  margin-left: 38rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
}
.banner_t_img text{
  font-size: 26rpx;
  letter-spacing: 4rpx;
}
.ment{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  letter-spacing: 4rpx;
}
.ments{
  width: 100%;
  height: 310rpx;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  justify-content: space-around;
}
.ments_t{
  width: 45%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
}
.ments_t image{
  width: 100%;
  height: 250rpx;
  border-radius: 20rpx;
}
.ments_t text{
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}
.ments_b{
  width: 100%;
  height: 20rpx;
  background: #eee;
}
.mentss{
  width: 92%;
  height: 430rpx;
  display: flex;
  flex-direction: column;
  margin-left: 4%;
}
.mentss image{
  width: 100%;
  height: 280rpx;
}
.mentss text:nth-child(1){
  letter-spacing: 4rpx;
}
.zhankai{
  margin: 30rpx 0;
  font-size: 26rpx;
  color: #969696;
  letter-spacing: 2rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.zhankai1{
  letter-spacing: 2rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.kefu{
  position: fixed;
  z-index: 1;
  bottom: 50rpx;
  right: 20rpx;
  width: 90rpx;
  height: 90rpx;
  background: rgb(0, 0, 0,.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.kefu image{
  width: 70rpx;
  height: 70rpx;
}
.contact{
  opacity: 0;
  position: fixed;
}
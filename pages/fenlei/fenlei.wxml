</view>
<!-- 左边结束 -->
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
 <swiper-item>
 <view class="quanbu" bindtap='bindAaa' data-newsid="{{item}}" wx:for="{{list}}" wx:key="">
 <van-row>
  <van-col span="9" custom-class="quanbu1"><image src="{{item.img}}"></image></van-col>
  <van-col span="15" custom-class="quanbu2">
   <view class="quanbu2_1">{{item.title}}</view>
   <text>{{item.short_title}}</text>
   <van-icon name="chat-o" />
  </van-col>
</van-row>
</view>
